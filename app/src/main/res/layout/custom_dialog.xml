<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <EditText
            android:id="@+id/escribirnombredered"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:hint="Nombre de red"/>
        <EditText
            android:id="@+id/escribircontraseñared"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Contraseña de red"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/escribiriokeyadafruit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Iokey Adafuit"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/escribirusuarioadafruit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Usuario de Adafruit"
            android:textSize="20dp"/>



    </LinearLayout>
</RelativeLayout>